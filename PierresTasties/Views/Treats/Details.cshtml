@{
    // TREATS DETAIL PAGE
    ViewData["Title"] = $"{@Model.Name} Details";
}

<div class="flavor-btn-container">
    @foreach(FlavorTreat flavorTreat in Model.FlavorTreats)
    {
        <a 
            href="/flavors/details/@flavorTreat.Flavor.FlavorId" 
            class="btn w-50 flavor-link @flavorTreat.Flavor.Name"
            title="See All @flavorTreat.Flavor.Name Treats"
        >
                @flavorTreat.Flavor.Name
        </a>
    }
</div>

<h1>
    @Model.Name 
    

    @if (ViewBag.isAdmin)
    {
        <a href="/treats/edit/@Model.TreatId" title="Edit">‚úèÔ∏è</a>
        <a href="#" 
            data-id="@Model.TreatId" 
            data-url="/treats/delete/@Model.TreatId" 
            class="delete-link" 
            title="Delete"
        >‚ùå</a>
    }
</h1>

@* Image of treat. *@
<img src="@($"/{Model.Name}.jpg")" height="350px" alt="Photo of a delicious @Model.Name"/>

@* Vote button. *@
<div class="btn-container">
    <button 
        class="btn btn-success w-5 btn-block vote-count" 
        title="Use a Tasty Token"
    > 
        ü™ô @Model.Votes.Count
    </button>
</div>

@* Treat description. *@
@if (Model.Description == null)
{
    <dd>This is a new hand-crafted tasty treat by Pierre.</dd>
}
else
{
    <dd>@Model.Description</dd>
}



