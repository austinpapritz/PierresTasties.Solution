@{
    ViewData["Title"] = "Treat Page";
}

<h1>@ViewData["Title"]</h1>

@if (@Model.Count == 0)
{
	<h3>There's nothing here</h3>
}

<ul>
    @foreach (Treat treat in Model)
    {
			<li>
                @treat.Name
                <a href="/treats/details/@treat.TreatId">🔎</a>
                
                @if (ViewBag.isAdmin)
                {
                    <a href="/treats/edit/@treat.TreatId">✏️</a>
                    <a href="#" data-id="@treat.TreatId" data-url="/treats/delete/@treat.TreatId" class="delete-link">❌</a>
                }
            </li>
    }
</ul>