@{
    ViewData["Title"] = "Flavor Form";
}

@model Flavor

<h3>@ViewData["Title"]</h3>

<form asp-action="@ViewBag.FormAction" asp-controller="Flavors" method="post">
    @Html.AntiForgeryToken()

    @* IF form is being used to edit, then attach the Id to model. *@
    @if (Model != null && Model.FlavorId != 0)
    {
        @Html.HiddenFor(m => m.FlavorId)
    }

    @* Name *@
    <div class="form-group">   
        <label asp-for="Name" class="control-label">Name: </label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="@ViewBag.SubmitButton" class="btn btn-primary" />
    </div>
</form>

<p>@Html.ValidationSummary(true, "", new { @class="text-danger" })</p>